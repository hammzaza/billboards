    <script>
        $(document).ready(function () {
            $('#uploadsong').click(function(){
                var uploadlink = $('#uploadfile'). val();
                var name = $('#uploadname').val();
                var genre = $('#uploadgenre').val();
                var description = $('#uploaddescription').val();
                var tags = $('#uploadtags').val();
                var index = 0;
                for(var i = 0; i < uploadlink.length; i++){
                    if(uploadlink[i] == "\\"){
                        index = i
                    }
                }
                link = ".\\songs"+ uploadlink.slice(index)
                $.ajax({
                    method:'post',
                    url:'/uploadsong',
                    data:{link:link,name:name,genre:genre,description:description,tags:tags},
                    success: function(data){
                        alert('successfully added');
                        window.location.reload();
                    }
                });
            });
            $(".toggle-sidebar").click(function () {
                $("#sidebar").toggleClass("collapsed");
                $("#content").toggleClass("col-sm-12 col-sm-10");
                return false;
            });
            $('#uploadfile').change(function(){
                $('#modalDescriptionForm').modal();
